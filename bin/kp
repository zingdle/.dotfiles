#!/bin/bash

tty=$(tty)

if [ "$UID" != "0" ]; then
  pid=$(ps -f -u $UID | sed 1d | fzf -m --header='[kill:process]' | awk '{print $2}')
else
  pid=$(ps -ef | sed 1d | fzf -m --header='[kill:process]' | awk '{print $2}')
fi

if [ "x$pid" != "x" ]; then
  echo $pid | tee $tty | xargs kill -${1:-9}
fi
